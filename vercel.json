{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "js/**",
      "use": "@vercel/static"
    },
    {
      "src": "css/**",
      "use": "@vercel/static"
    },
    {
      "src": "lib/**",
      "use": "@vercel/static"
    }
  ],
  "crons": [
    {
      "path": "/api/reports/monthly",
      "schedule": "0 9 1 * *"
    }
  ],
  "routes": [
    {
      "src": "/auth/google/callback",
      "dest": "/api/auth/google/callback.js"
    },
    {
      "src": "/auth/google",
      "dest": "/api/auth/google.js"
    },
    {
      "src": "/api/transactions/([^/]+)",
      "dest": "/api/transactions/[id].js?id=$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}